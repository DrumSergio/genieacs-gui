<% object = get_param(params['_object'], @device) %>
<table class="records">
<tr>
<% for k, v in params %>
  <% next if k[0] == '_' %>
  <th><%= k %></th>
<% end %>
</tr>

<% if object %>
<% for k, v in object %>
  <% next if k[0] == '_' %>
  <tr>
  <% for k2, v2 in params %>
    <% next if k2[0] == '_' %>
    <td class="action">
      <%= param_value("#{params['_object']}.#{k}.#{v2}", @device) rescue '' %>
      <% if v[v2]['_writable'] %>
      <% options = Rails.configuration.parameters_edit["#{params['_object']}.#{k}.#{v2}".gsub(/\.\d+\./, '..')] %>
      <a href="#" onclick='editParam("<%= "#{params['_object']}.#{k}.#{v2}" %>", "<%= v[v2]['_type'] %>", "<%= v[v2]['_value'] %>", <%= options.to_json.html_safe %>);return false;'>Edit</a>
      <% end %>
    </td>
  <% end %>
  <% if v['_writable'] %>
    <td class="action">
      <a href="#" onclick="deleteObject('<%= "#{params['_object']}.#{k}" %>');return false;">Delete</a>
    </td>
  <% end %>
  </tr>
<% end %>
<% if object['_writable'] %>
<tr>
  <td colspan="0">
    <a href="#" onclick="addObject('<%= params['_object'] %>');return false;">Add</a>
  </td>
</tr>
<% end %>
<% end %>
</table>
